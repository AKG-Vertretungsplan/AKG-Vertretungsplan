<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- No customization yet. -->
    </style>
    <style name="TransparentTheme" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="NavigationDrawerTextViewTheme" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/navigation_drawer_item_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_drawer_item_bottom_margin</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/navigation_drawer_item_vertical_padding</item>
        <item name="android:paddingRight">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/navigation_drawer_item_vertical_padding</item>
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="android:textColor">@color/drawer_primary_text_dark</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>
    <style name="DividerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/navigation_drawer_divider_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_drawer_divider_bottom_margin</item>
        <item name="android:background">@color/navigation_drawer_divider</item>
    </style>
    <style name="InformationTextViewTheme">
        <item name="android:layout_margin">@dimen/information_text_view_margin</item>
    </style>
</resources>
